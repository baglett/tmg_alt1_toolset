{
  "name": "tmg-alt1-toolset",
  "version": "1.0.0",
  "description": "Modular Alt1 Toolkit ecosystem with reusable components and specialized plugins",
  "private": true,
  "workspaces": [
    "components/*",
    "plugins/*"
  ],
  "scripts": {
    "build:all": "npm run build --workspaces --if-present",
    "build:components": "npm run build --workspace=components/*",
    "build:plugins": "npm run build --workspace=plugins/*",
    "dev:dungeoneering": "npm run dev --workspace=plugins/dungeoneering-optimizer",
    "dev:mouse-text": "npm run dev --workspace=components/mouse-text-tool",
    "dev:advanced-windows": "npm run dev --workspace=components/advanced-overlay-windows",
    "dev:windows-test": "npm run dev --workspace=plugins/advanced-windows-test",
    "test:all": "npm test --workspaces --if-present",
    "lint:all": "npm run lint --workspaces --if-present",
    "clean:all": "npm run clean --workspaces --if-present",
    "create:component": "node scripts/create-component.js",
    "create:plugin": "node scripts/create-plugin.js",
    "deploy": "npm run build:all && node scripts/deploy.js",
    "deploy:force": "node scripts/deploy.js"
  },
  "devDependencies": {
    "@types/node": "^12.12.54",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "rimraf": "^5.0.5",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "typescript": "^5.1.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^5.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/baglett/tmg_alt1_toolset.git"
  },
  "keywords": [
    "alt1",
    "runescape",
    "automation",
    "toolkit",
    "components",
    "plugins"
  ],
  "author": "TMG Development Team",
  "license": "MIT",
  "dependencies": {
    "sharp": "0.34.4"
  }
}
